@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BilgeAdam.Sinemaskop</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/reboundgen.css" rel="stylesheet" />
    <link href="~/css/flip.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/vue.js"></script>
    <script src="~/js/site.js"></script>
</head>
<body>
    @*Menü Başlangıç*@
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <h5 class="my-0 mr-md-auto font-weight-normal">Sinemaskop</h5>
        <nav class="my-2 my-md-0 mr-md-3">
            <a class="p-2 text-dark" href="@Url.Action("Index", "Home")">Ana Sayfa</a>
            <a class="p-2 text-dark" href="@Url.Action("About", "Home")">Salonlar</a>
            <a class="p-2 text-dark" href="#">Filmler</a>
            <a class="p-2 text-dark" href="#">Yönetim</a>
        </nav>
        <a class="btn btn-outline-primary" href="#">
            @if (HttpContextAccessor.HttpContext.Session.GetString("userName") == null)
            {
                <span>Giriş Yap</span>
            }
            else
            {
                <span>@HttpContextAccessor.HttpContext.Session.GetString("userName")</span>
            }
        </a>
    </div>
    @* Menü Bitişi *@
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - BilgeAdam.Sinemaskop</p>
        </footer>
    </div>
    <script src="~/js/flip.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
